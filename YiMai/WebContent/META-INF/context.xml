        name="jdbc/OracleDataSource"                           
        factory="com.alibaba.druid.pool.DruidDataSourceFactory"
        auth="Container"                                       
        type="javax.sql.DataSource"                            
        driverClassName="oracle.jdbc.driver.OracleDriver"         
